+output_requirement (deptype, filename)
+const char *deptype;
+char *filename;
+{
+  static char *alphabet_set = "abcdefghijklmnopqrstuvwxyz"
+                    "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
+
+  if (strchr(filename, '$') || (filename[0] != '/' && strchr(filename, '/')))
